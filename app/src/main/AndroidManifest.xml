<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.macq.kimpong">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profile.AccountActivity"
            android:label="@string/title_activity_account"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".matches.MatchesActivity"
            android:label="@string/title_activity_matches"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".match_detail.MatchDetailActivity" />
        <activity
            android:name=".add_match.AddMatchActivity"
            android:label="@string/title_activity_add_match"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ranking.RankingActivity" />
        <activity android:name=".users.UsersActivity"></activity>
    </application>

</manifest>